.log-list {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
}
.log-item {
  margin: 10rpx;
}

table,thead,tr{
  display:block;
  width:100%;
  text-align:center;
}
thead{
  width:100%;
  height:80rpx;
  line-height:80rpx;
  background:#f6f6f6
}

thead,tr{
  display: flex
}
td{
  display:inline-block;
  flex:2;
}
td:nth-child(1){
  flex:1
}